<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nightmode"
    tools:context=".LoginScreen">

    <TextView
        android:id="@+id/loginScreentext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/login_screen"
        android:textColor="@color/blackandWhite"
        android:gravity="start"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
        android:textSize="45sp"
        android:layout_margin="15dp" />

    <ScrollView
        android:id="@+id/scrollviewww"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/loginScreentext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/linearloginform"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phoneLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/purple_200"
                    android:hint="Mobile/Email"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeErrorColor="#FF0000"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/loginScreentext">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/purple_200"
                    android:hint="Password"
                    android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginTop="30dp"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeErrorColor="#FF0000"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/loginScreentext"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/loginButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="70dp"
                    android:paddingRight="70dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:layout_gravity="center"
                    android:text="@string/login_screen"
                    android:textColor="@color/blackandWhite"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
                    android:textSize="20sp"
                    android:layout_marginTop="@dimen/logbuttonmargin"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/black"
                    app:cornerRadius="4dp"
                    app:rippleColor="@color/purple_200"
                    app:elevation="20dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/signuupButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="70dp"
                    android:paddingRight="70dp"
                    android:layout_gravity="center"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="@string/signup_screen"
                    android:textColor="@color/blackandWhite"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/black"
                    app:cornerRadius="4dp"
                    app:rippleColor="@color/purple_200"
                    app:elevation="20dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>